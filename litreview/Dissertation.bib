  shorttitle = {Of {{Apples}} and {{Oranges}}?},
  author = {Huck, Maren and Di Fiore, Anthony and {Fernandez-Duque}, Eduardo},
  year = {2020},
  journal = {Frontiers in Ecology and Evolution},
