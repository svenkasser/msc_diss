@article{komdeur2017,
  title = {Adult Sex Ratios and Their Implications for Cooperative Breeding in Birds},
  author = {Komdeur, Jan and Sz{\'e}kely, Tam{\'a}s and Long, Xiaoyan and Kingma, Sjouke A.},
  year = {2017},
  month = sep,
  journal = {Philosophical Transactions of the Royal Society B: Biological Sciences},
  volume = {372},
